{{#if items}}
<h4> Items in the database</h4>
<div class="card-container">
  {{#each items}}
  <div class="card border-secondary mb-3" style="max-width: 20rem;">
    <div class="card-header">
      <div class="item-header">
        <div class="item-header-text">{{this.itemName}}</div>
        <form method="post" action="/setCookie">
          <input type="hidden" name="itemName" value={{this.itemName}}></input>
          <button type="submit" class="add-to-cart-button" title="Add to cart">
            <img src="images/plus-button.png"></img>
          </button>
        </form>
      </div>

    </div>
    <div class="card-body">
      <img class="item-image" src="data:{{this.img.contentType}};base64,{{this.actualImage}}">
      <br>
      Amount left: {{this.quantity}}
    </div>
  </div>
  {{/each}}
</div>

{{else}}
<li class="list-group-item">
  <h4 class="text-center">
    No items found
  </h4>
</li>
{{/if}}