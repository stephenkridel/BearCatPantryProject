<div class="main-container">
    {{#if items}}
    <h5>{{items.length}} result(s) found: {{searchText}}</h5>
    <div class="card-container">
        {{#each items}}
        <div class="card mb-3 item-container">
            <h4 class="card-header">{{this.itemName}}</h4>
            <img class="item-image" src="data:{{this.img.contentType}};base64,{{this.actualImage}}" alt="Card image">
            <div class="card-body">
                <p class="card-text">Amount left: {{this.quantity}}</p>
                <button type="submit" class="btn btn-primary add-to-cart-button" title="Add to cart">Add to cart
                </button>
            </div>
        </div>
        {{/each}}
    </div>
</div>
        {{#if count}}
            <div>
                <ul class="pagination" name="pagination">
                    <li class="page-item">
                        <a class="page-link" href="/items?searchBar={{searchText}}&Page={{PrevPage}}">&laquo;</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="/items?searchBar={{searchText}}&Page={{Page}}">{{Page}}</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="/items?searchBar={{searchText}}&Page={{NextPage}}">&raquo;</a>
                    </li>
                </ul>
            </div>
        {{else}}
            {{#if First}}
                <div>
                    <ul class="pagination" name="pagination">
                        <li class="page-item disabled">
                            <a class="page-link" href="/items?searchBar={{searchText}}&Page={{PrevPage}}">&laquo;</a>
                        </li>
                        <li class="page-item disabled">
                            <a class="page-link" href="/items?searchBar={{searchText}}&Page={{Page}}">{{Page}}</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/items?searchBar={{searchText}}&Page={{NextPage}}">&raquo;</a>
                        </li>
                    </ul>
                </div>
            {{else}}
                <div>
                    <ul class="pagination" name="pagination">
                        <li class="page-item">
                            <a class="page-link" href="/items?searchBar={{searchText}}&Page={{PrevPage}}">&laquo;</a>
                        </li>
                        <li class="page-item disabled">
                            <a class="page-link" href="/items?searchBar={{searchText}}&Page={{Page}}">{{Page}}</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/items?searchBar={{searchText}}&Page={{NextPage}}">&raquo;</a>
                        </li>
                    </ul>
                </div>
            {{/if}}
        {{/if}}
    {{else}}
        <li class="list-group-item">
            <h4 class="text-center">
                No items found
            </h4>
        </li>
        <div>
            <ul class="pagination" name="pagination">
                <li class="page-item">
                    <a class="page-link" href="/items?searchBar={{searchText}}&Page={{PrevPage}}">&laquo;</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="/items?searchBar={{searchText}}&Page={{Page}}">{{Page}}</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="/items?searchBar={{searchText}}&Page={{NextPage}}">&raquo;</a>
                </li>
            </ul>
        </div>
    {{/if}}
