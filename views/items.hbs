<div class="main-container">
    {{#if items}}
    <h5>{{Skip}} result(s) found: {{searchText}}</h5>
    <div class="card-container">
        {{#each items}}
        <div class="card mb-3 item-container">
            <div class="card-header">
                <span class="item-title">{{this.itemName}}</span>
                <span class="item-quantity">Quantity: {{this.quantity}}</span>
            </div>
            <img class="item-image" src="data:{{this.img.contentType}};base64,{{this.actualImage}}" alt="Card image">
            <div class="card-body">
                {{#if this.weight}}
                <div class="card-text" style="display:flex">
                    <div class="tool-tip" title="Used by the pantry to limit the checkout of certain in demand items.">?
                    </div>
                    Bearcat Bucks: {{this.weight}}
                </div>
                <button type="submit" class="btn btn-primary add-to-cart-button" title="Add to cart"> Add to Cart
                </button>
                {{else}}
                <button style="margin-right:10px" type="submit" class="btn btn-primary add-to-cart-button"
                    title="Add to cart">Add to cart
                </button>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
    <div style="display:inline">
        <ul class="pagination" name="pagination">
        {{#if BackPage}}
                    <li class="page-item">
                        <a class="page-link" href="/items?searchBar={{searchText}}&Page={{PrevPage}}">&laquo;</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="/items?searchBar={{searchText}}&Page={{Page}}">{{Page}}</a>
                    </li>
        {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="/items?searchBar={{searchText}}&Page={{PrevPage}}">&laquo;</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="/items?searchBar={{searchText}}&Page={{Page}}">{{Page}}</a>
                    </li>
        {{/if}}
        {{#if ForwardPage}}
                    <li class="page-item">
                        <a class="page-link" href="/items?searchBar={{searchText}}&Page={{NextPage}}">&raquo;</a>
                    </li>
        {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="/items?searchBar={{searchText}}&Page={{NextPage}}">&raquo;</a>
                    </li>
        {{/if}}
        </ul>
    </div>
    {{else}}
    <li class="list-group-item">
        <h4 class="text-center">
            No items found
        </h4>
    </li>
    <div>
        <ul class="pagination" name="pagination">
            <li class="page-item disabled">
                <a class="page-link" href="/items?searchBar={{searchText}}&Page={{PrevPage}}">&laquo;</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="/items?searchBar={{searchText}}&Page={{Page}}">{{Page}}</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="/items?searchBar={{searchText}}&Page={{NextPage}}">&raquo;</a>
            </li>
        </ul>
    </div>
    {{/if}}
</div>