<div class="main-container">
    {{#if items}}
    <h3>Items in the Pantry</h3>
<div>{{searchText}}</div>
    <div class="card-container">
        {{#each items}}
        <div class="card mb-3 item-container">
            <h4 class="card-header">{{this.itemName}}</h4>
            <img class="item-image" src="data:{{this.img.contentType}};base64,{{this.actualImage}}" alt="Card image">
            <div class="card-body">
                <p class="card-text">Amount left: {{this.quantity}}</p>
                <button type="submit" class="btn btn-primary add-to-cart-button" title="Add to cart">Add to cart
                </button>
            </div>
        </div>
        {{/each}}
    </div>

    {{else}}
    <li class="list-group-item">
        <h4 class="text-center">
            No items found
        </h4>
    </li>
    {{/if}}
</div>