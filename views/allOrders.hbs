<div class="main-container">
    <h2>All Orders</h2>
    <table class="table table-hover cart-table">
        <thead>
            <tr>
                <th scope="col">User</th>
                <th scope="col">Cart Contents</th>
                <th scope="col">Status</th>
                <th scope="col">Creation Date</th>

            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <th scope="row" class="fixed-row">{{this.cart.user}}</th>
                <th scope="row" class="fixed-row">
                    {{#each this.cart.items }}
                    {{this.itemName}} - {{this.quantity}}
                    <br>
                    {{/each}}
                </th>
                <th scope="row" class="fixed-row">{{this.status}}</th>
                <th scope="row" class="fixed-row">{{this.creationDate}}</th>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>